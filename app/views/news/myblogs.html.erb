
<div class="container my-5">
    <div class="row">
        <h1 class="float-start display-4">My Blogs</h1>

    </div>
</div>
<% if Blog.where(user_id: session[:current_user]) == nil %>
<% Blog.where(user_id: session[:current_user]).map do |cur_post| %>
    <div class="container my-2">
    <div class="row bg-white py-2">
        <div class="my-2">
             <h5 class="float-start"><i class="fa fa-user text-body mx-2" aria-hidden="true"></i><%= User.find(cur_post.user_id).username.capitalize%> </h5>
             <span class="float-end d-flex">
                <p class="fw-bold "><%= cur_post.updated_at%></p>
                <i class="fa fa-ellipsis-v mx-2 nav-link dropdown-toggle text-dark"  id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-hidden="true"></i> 
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <li ><a class="dropdown-item" href="/blog/edit/<%= cur_post.id%>">Edit</a></li>
                    <li><a class="dropdown-item" href="/blog/<%= cur_post.id %>">Delete</a></li>
                  </ul>  
             </span>
        </div>
        <div class="mb-5">
            <h2><%= cur_post.blog_title%>
            </h2>
            <h4 class="text-muted">
            <%= cur_post.blog_description%>
            </h4>
        </div>
        
        <div class="w-100 m-auto row ps-4 pe-5">
            <button class="col-4 btn pt-2 pb-2"><i class="fa fa-heart-o fa-lg" aria-hidden="true"></i></button>
            <button class="col-4 btn pt-2 pb-2"><i class="fa fa-comments-o fa-lg" aria-hidden="true"></i></button>
            <button class="col-4 btn pt-2 pb-2"><i class="fa fa-share-square-o fa-lg" aria-hidden="true"></i></button>
          </div>
    </div>
</div>
<% end %>
  <% else %>
    <div class="container">
        <p class="display-4">No posts yet please login to add blogs</p>
        <button class="btn-lg btn-primary float-end mt-5">Login</button>
            <button></button>
    </div>
<% end %>

