<div class="container">
    <div class="row bg-white py-2">
        <div class="my-2">
             <p class="float-start">LMS BLOG</p>
             <p class="float-end fw-bold">02-08-2022</p>
        </div>
        <div class="mb-5">
            <h1>
                Hi I am Aswath
            </h1>
        </div>
        <div class="row">
             <div class="col">
                <button class=" btn-lg btn-primary"><i class="fa fa-heart-o fa-lg me-2" aria-hidden="true"></i>Like</button>
                <p class="float-end fw-bold">10,000 <i class="fa fa-heart-o fa-lg me-2" aria-hidden="true"></i>'s</p>
             </div>
          </div>
    </div>
</div>
<% Blog.all.map do |cur_post| %>
    <div class="container my-2">
    <div class="row bg-white py-2">
         <div class="my-2"> 
             <h4 class="float-start"><i class="fa fa-user text-body mx-2" aria-hidden="true"></i><%= User.find(cur_post.user_id).username.capitalize%> </h4>
             <p class="float-end fw-bold"><%= cur_post.updated_at%></p>
        </div>
        <div class="mb-5">
            <h2><%= cur_post.blog_title%>
            </h2>
            <h4 class="text-muted">
            <%= cur_post.blog_description%>
            </h4>
        </div>
        
        <div class="row">
            <div class="col">
                <% like_exist = Like.find_by(user_id: session[:current_user], blog_id: cur_post['id']).nil? %>
                <% unless like_exist %>
                <a href="/delete_liked_blog/<%= cur_post['id'] %>"><button class="btn-lg bg-secondary" type="button"><i class="fa fa-heart-o fa-lg text-danger me-2"></i>&nbsp; Liked</button></a>
                <% else %>
                <a href="/like_blog/<%= cur_post['id'] %>"><button class="btn-lg bg-secondary" type="button"><i class="fa fa-heart-o fa-lg me-2"></i>&nbsp; Like</button></a>
                <% end %>
                <% cur_blog_likes = Like.where(blog_id: cur_post['id']).length %>
                <p class="float-end fw-bold"><i class="fa fa-heart-o fa-lg me-2" aria-hidden="true"></i><%= cur_blog_likes %> 's</p>
              </div>
            </div>
         </div>
    </div>
</div>
<% end %>


